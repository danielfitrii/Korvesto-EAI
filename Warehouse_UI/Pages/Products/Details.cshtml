@page "{id}"
@model Warehouse_UI.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Product Details</h2>
                </div>
                <div class="card-body">
                    @if (Model.Product != null)
                    {
                        <dl class="row">
                            <dt class="col-sm-3">Product ID</dt>
                            <dd class="col-sm-9">@Model.Product.Id</dd>

                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">@Model.Product.Name</dd>

                            <dt class="col-sm-3">Price</dt>
                            <dd class="col-sm-9">@Model.Product.Price.ToString("C")</dd>

                            <dt class="col-sm-3">Description</dt>
                            <dd class="col-sm-9">@Model.Product.Description</dd>

                            <dt class="col-sm-3">Stock Quantity</dt>
                            <dd class="col-sm-9">@Model.Product.StockQuantity</dd>
                        </dl>

                        <div class="mt-3">
                            <a asp-page="/Stock/Adjust" asp-route-id="@Model.Product.Id" class="btn btn-primary">Adjust Stock</a>
                            <a asp-page="/Stock/Index" class="btn btn-secondary">Back to Stock List</a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            Product not found.
                        </div>
                        <a asp-page="/Stock/Index" class="btn btn-secondary">Back to Stock List</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 