@page
@model IndexModel
@{
    ViewData["Title"] = "Middleware Dashboard";
}

<div class="container">
    <h1 class="mb-4">Middleware Dashboard</h1>

    <div class="row mb-4">
        <div class="col">
            <a href="/Sales/Create" class="btn btn-primary">Process New Sale</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="h5 mb-0">Recent Activity Logs</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>Operation</th>
                            <th>Details</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.ActivityLogs)
                        {
                            <tr>
                                <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@log.Operation</td>
                                <td>@log.Details</td>
                                <td>
                                    <span class="badge @(log.Status == "Success" ? "bg-success" : "bg-danger")">
                                        @log.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
