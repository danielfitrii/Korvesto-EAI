@page "{id}"
@model Middleware_UI.Pages.Sales.SaleDetailsModel
@{
    ViewData["Title"] = "Sale Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Sale Details</h2>
        <a asp-page="/Sales/SaleForm" class="btn btn-primary">New Sale</a>
    </div>

    @if (Model.SaleDetails != null)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Sale Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Sale ID</dt>
                                    <dd class="col-sm-8">@Model.SaleDetails.SaleId</dd>

                                    <dt class="col-sm-4">Date</dt>
                                    <dd class="col-sm-8">@Model.SaleDetails.SaleDate.ToString("g")</dd>

                                    <dt class="col-sm-4">Total Amount</dt>
                                    <dd class="col-sm-8">@Model.SaleDetails.TotalAmount.ToString("C")</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Customer</dt>
                                    <dd class="col-sm-8">@Model.SaleDetails.Customer.Name</dd>

                                    <dt class="col-sm-4">Email</dt>
                                    <dd class="col-sm-8">@Model.SaleDetails.Customer.Email</dd>

                                    <dt class="col-sm-4">Phone</dt>
                                    <dd class="col-sm-8">@Model.SaleDetails.Customer.Phone</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Items</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.SaleDetails.Items)
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.UnitPrice.ToString("C")</td>
                                            <td>@item.TotalPrice.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Loyalty Points</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <h3 class="display-4">@Model.SaleDetails.Loyalty.CurrentBalance</h3>
                            <p class="text-muted">Current Balance</p>
                        </div>
                        <div class="list-group">
                            @foreach (var transaction in Model.SaleDetails.Loyalty.RecentTransactions)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@transaction.Description</h6>
                                        <small>@transaction.Timestamp.ToString("g")</small>
                                    </div>
                                    <p class="mb-1">
                                        <span class="@(transaction.Points > 0 ? "text-success" : "text-danger")">
                                            @(transaction.Points > 0 ? "+" : "")@transaction.Points points
                                        </span>
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Sale details not found. Please check the sale ID and try again.
        </div>
    }
</div> 