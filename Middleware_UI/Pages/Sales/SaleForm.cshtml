@page
@model Middleware_UI.Pages.Sales.SaleFormModel
@{
    ViewData["Title"] = "New Sale";
}

<div class="container">
    <h2 class="mb-4">Create New Sale</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="SaleRequest.CustomerId" class="form-label">Customer ID</label>
                            <input asp-for="SaleRequest.CustomerId" class="form-control" />
                            <span asp-validation-for="SaleRequest.CustomerId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SaleRequest.ProductId" class="form-label">Product ID</label>
                            <input asp-for="SaleRequest.ProductId" class="form-control" />
                            <span asp-validation-for="SaleRequest.ProductId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SaleRequest.Quantity" class="form-label">Quantity</label>
                            <input asp-for="SaleRequest.Quantity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="SaleRequest.Quantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Process Sale</button>
                            <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Help</h5>
                </div>
                <div class="card-body">
                    <p>Enter the following information to process a new sale:</p>
                    <ul>
                        <li>Customer ID: The unique identifier of the customer</li>
                        <li>Product ID: The unique identifier of the product</li>
                        <li>Quantity: The number of items to purchase</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 