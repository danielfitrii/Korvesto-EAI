@page "{id?}"
@model POS_UI.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h1>Product Details</h1>

    @if (Model.Product == null)
    {
        <div class="alert alert-warning" role="alert">
            Product not found.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                Product: @Model.Product.Name
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Model.Product.Id</dd>

                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Product.Name</dd>

                    <dt class="col-sm-3">Price:</dt>
                    <dd class="col-sm-9">@Model.Product.Price.ToString("C")</dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@Model.Product.Description</dd>

                    <dt class="col-sm-3">Stock Quantity:</dt>
                    <dd class="col-sm-9">@Model.Product.StockQuantity</dd>
                </dl>
            </div>
            <div class="card-footer">
                <a asp-page="./Index" class="btn btn-secondary">Back to Products</a>
            </div>
        </div>
    }
</div> 